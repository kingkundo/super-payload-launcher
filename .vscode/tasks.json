{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile TS to JS",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}//node_modules//.bin/tsc.cmd"
            },
            "command": "${workspaceFolder}//node_modules//.bin/tsc"
        },
        {
            "label": "Minify JS",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}//node_modules//.bin/grunt.cmd"
            },
            "command": "${workspaceFolder}//node_modules//.bin/grunt"
        },
        {
            "label": "Delete Temp JS Files",
            "type": "shell",
            "windows": {
                "command": "Remove-item",
                "args": [
                    "${workspaceFolder}//src//*.js",
                    "-recurse"
                ]
            },
            "command": "find ${workspaceFolder}//src// -name '*.js' -delete"
        },
        {
            "label": "Build",
            "dependsOn": [
                "Compile TS to JS",
            ],
            "dependsOrder": "sequence"
        },
        {
            // To use this task, you must comment out the
            // outDir option in tsconfig.json 
            "label": "Build Production",
            "dependsOn": [
                "Compile TS to JS",
                "Minify JS",
                "Delete Temp JS Files"
            ],
            "dependsOrder": "sequence"
        }
    ]
}